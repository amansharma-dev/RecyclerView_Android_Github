<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:id="@+id/root_name_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/sticker_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Banana"
            android:layout_alignParentStart="true"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_money_black_24dp" />
            <TextView
                android:id="@+id/sticker_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5.99"
                android:textSize="20sp"/>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/sticker_imageview_details"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/root_name_price_layout"
        android:layout_marginTop="20dp"
        android:src="@drawable/one"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/sticker_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="This is inspired from Banana."
        android:textSize="24sp"
        android:layout_below="@id/sticker_imageview_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>